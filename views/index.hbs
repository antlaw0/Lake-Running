<h1>Bird Records</h1>

<div class="addNewLake">

  <h3>Add new Lake</h3>

  <div class="messages">
    {{#each messages.error}}
      <p class="error_msg">{{this}}</p>
    {{/each}}
  </div>

  <form action="/" method="POST">
    Name: <input name="name" type="text" required>
    
    <br>
	
	Description: <input name="description" type="text">
    <br>
    New Time: <input name="time" type="number" >
    <br>
    
    
    
    Date of Run: <input name="date" type="datetime-local" required>
    <br>
    <input name="addLake" type="submit" value="Add new lake">
    <br>
  </form>

</div>

<div class="lakeRuns">

  <h3>All Runs</h3>

  {{# each lakes}}
  <form action="/deleteLake" method="POST">
      <input name="delete" type="submit" value="{{this._id}}">Delete</input>
    
    </form>
	
  <br>
    <p>Name: {{this.name}}</p>
    <p>Description: {{this.description}}</p>
    <p>times: {{this.times}}</p>
    <p>Dates of runs:</p>
    <ul>
    {{#each this.dates}}
      <li>
        {{dateFormatter this}}
      </li>
      <li>{{this}}</li>
    {{else}}
      <li>No sightings reported</li>
    {{/each}}
    </ul>

    <P>Add new date seen</P>

    <form action="/addDate" method="POST">
      <input name="dateSeen" type="datetime-local" required>
      <input name="_id" type="hidden" value="{{this._id}}">
      <input name="name" type="hidden" value="{{this.name}}">
      <input name="add" type="submit" value="Add new date">
    </form>

    <hr>

  {{else}}
    <p>No bird records in the database</p>
  {{/each}}
</div>


